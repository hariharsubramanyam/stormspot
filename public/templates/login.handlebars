<div id="login-box">
  <h1>Welcome to StormSpot!</h1>
  <h2>Please login/register</h2>
  <input type="text" class="pretty-input" placeholder="username" id="txt_reg_username">
  <input type="password" class="pretty-input" placeholder="password" id="txt_reg_password">
  <input type="password" class="pretty-input" placeholder="re-enter password" id="txt_reg_confirm"> 
  <br>
