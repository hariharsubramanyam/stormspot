<h1>{{report.storm_type}} ({{report.severity_level}})</h1>

{{#if isUpvoter }}
<button class="pretty-button yellow-btn">{{report.upvoters.length}} upvoters</button>
{{else}}
<button class="pretty-button">{{report.upvoters.length}} upvoters</button>
{{/if}}

{{#if isDownvoter }}
<button class="pretty-button yellow-btn">{{report.downvoters.length}} downvoters</button>
{{else}}
<button class="pretty-button">{{report.downvoters.length}} downvoters</button>
{{/if}}
<p>{{report.content}}</p>
